<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFEB3B">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Polaris"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:id="@+id/mytext1"
        android:textStyle="italic"
        android:fontFamily="sans-serif-medium"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/mytext1"
        android:layout_marginTop="30dp"
        app:layout_constraintHorizontal_bias="0.1"
        android:src="@drawable/baseline_desktop_mac_24"
        android:id="@+id/img"/>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mytext1"
        android:id="@+id/mytextlog1"
        android:hint="Enter Email"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/myedtlog1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>




    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mytext1"
        android:id="@+id/mytextlog2"
        android:hint="Enter Name"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="30dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/myedtlog2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mytext1"
        android:id="@+id/mytextlog3"
        android:hint="Enter Password"
        android:layout_marginTop="170dp"
        android:layout_marginHorizontal="30dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/myedtlog3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mytextlog3"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="100dp"
        android:id="@+id/mybtn"
        android:text="LOGIN"
        android:backgroundTint="#000"
        android:textSize="20dp"/>


    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mytextlog3"
        android:layout_marginTop="470dp"
        android:layout_marginHorizontal="100dp"
        android:id="@+id/mybtn1"
        android:text="New? Register"
        android:backgroundTint="#000"
        android:textSize="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>